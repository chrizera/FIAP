package br.com.fiap.testes;

import java.util.Scanner;

public class Execicio5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
      
		String gabarito[] = new String[8];
		String resposta[] = new String[10];
		Scanner leitura = new Scanner (System.in);
		int i = 0, acertos = 0, aprovados = 0;
		int aluno[] = new int[10];
		
		for(i = 0; i < 8; i++){
			System.out.println("Digite a resposta da questão " + (i+1));
			gabarito[i] = leitura.nextLine();
		}
		
		for(i = 0; i < 10; i++){
			System.out.println("Digite o número do aluno: ");
			aluno[i] = leitura.nextInt();
			System.out.println("Digite a resposta dada pelo aluno" + aluno[i] + " à questão " + (i+1));
			resposta[i] = leitura.nextLine();
			
			if(resposta[i].equals(gabarito[i])){
				acertos++;
			}
			if(acertos >= 6){
				aprovados++;
			}
		}
		
		System.out.println("A porcentagem de aprovados é " + (aprovados/10)*100) + "%";
		
		leitura.close();
	}

}
